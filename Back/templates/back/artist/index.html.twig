{% extends 'base.html.twig' %}

{% block title %}liste Artistes{% endblock %}

{% block body %}
    <h1>Liste des artistes</h1>  
        <a class="btn btn-success me-2" href="{{ path('app_back_artist_new') }}">Cr√©er</a>

        <div class="d-flex justify-content-end">
            <form method="get" action="{{ path('app_back_artist_index') }}">
                <div class="form-group">
                    <label for="order">Trier par :</label>
                    <select id="order" name="order">
                        <option value="fullnASC" {% if order == 'fullname' %}selected{% endif %}>Nom (A-Z)</option>
                        <option value="fullnDESC" {% if order == 'fullname' %}selected{% endif %}>Nom (Z-A)</option>
                    </select>
                    <button class="btn-primary me-2" type="submit">Trier</button>
                </div>
            </form>
        </div>
        
        <table class="table">
            <thead>
                <tr>
                    <th>Nom/Pseudo:</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for artist in artists %}
                <tr>
                    <td>{{ artist.fullname }}</td>
                    
                    <td>
                        <a class="btn btn-info me-1" href="{{ path('app_back_artist_show', {'id': artist.id}) }}">Voir plus</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun ariste de disponible</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

            <div class="navigation d-flex justify-content-center">
                {{ knp_pagination_render(artists) }}
            </div>
{% endblock %}
