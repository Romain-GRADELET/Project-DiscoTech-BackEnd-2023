{% extends 'base.html.twig' %}

{% block title %}List Style{% endblock %}

{% block body %}
    <h1>Liste des styles</h1>
    <a class="btn btn-success me-2" href="{{ path('app_back_style_new') }}">Cr√©er</a>
<div class="d-flex justify-content-end">
    <form method="get" action="{{ path('app_back_style_index') }}" class="form-inline">
        <div class="d-flex">
            <div class="form-group mr-2">
                <label for="order">Trier par :</label>
                <select id="order" name="order" class="form-control">
                        <option value="nameASC" {% if order == 'nameASC' %}selected{% endif %}>Nom (A-Z)</option>
                        <option value="nameDESC" {% if order == 'nameDESC' %}selected{% endif %}>Nom (Z-A)</option>
                    </select>
                    <button class="btn-primary me-2" type="submit">Trier</button>
                </div>
            </form>
        </div>
        <div class="form-group">
                <label for="limit">Afficher :</label>
                <select id="limit" name="limit" class="form-control">
                    {% for limit in limits %}
                        <option value="{{ limit }}" {% if limit == currentLimit %}selected{% endif %}>{{ limit }}</option>
                    {% endfor %}
                </select>
                <button class="btn btn-primary ml-2" type="submit">Appliquer</button>
            </div>
        </form>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Image</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for style in styles %}
            <tr>
                <td>{{ style.name }}</td>
                <td><div class="img-fluid"><img src="{{ style.image }}" alt="Style_cover" style="width: 150px; height: 150px;" ></div></td>
                <td><a class="btn btn-info me-1" href="{{ path('app_back_style_show', {'id': style.id}) }}">voir plus</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun style disponible</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            <div class="navigation d-flex justify-content-center">
                {{ knp_pagination_render(styles) }}
            </div>
{% endblock %}
