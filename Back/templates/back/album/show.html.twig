{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}
    <h1>Album</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ album.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ album.name }}</td>
            </tr>
            <tr>
                <th>Edition</th>
                <td>{{ album.edition }}</td>
            </tr>
            <tr>
                <th>ReleaseDate</th>
                <td>{{ album.releaseDate ? album.releaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ album.createdAt ? album.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ album.updatedAt ? album.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ album.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_album_index') }}">back to list</a>

    <a href="{{ path('app_back_album_edit', {'id': album.id}) }}">edit</a>

    {{ include('back/album/_delete_form.html.twig') }}
{% endblock %}
