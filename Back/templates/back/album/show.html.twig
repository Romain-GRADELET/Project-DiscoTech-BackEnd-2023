{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}
    <h1>Album</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ album.name }}</td>
            </tr>
            <tr>
                <th>Artiste</th>
                <td>{# <td>{{app.artist.getArtistIdentifier()}}</td> #}</td>
            </tr>
            <tr>
                <th>Edition</th>
                <td>{{ album.edition }}</td>
            </tr>
            <tr>
                <th>Date de sorti</th>
                <td>{{ album.releaseDate ? album.releaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>mise en ligne</th>
                <td>{{ album.createdAt ? album.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ album.image }}</td>
            </tr>
        </tbody>
    </table>
<div class="d-flex justify-content-between" style="margin-bottom: 5rem; margin-top: 5rem">
    <a class="btn btn-secondary me-2" href="{{ path('app_back_album_index') }}"> <i class="bi bi-arrow-left"> </i>Retour a la liste</a>
    <div class="d-flex justify-content-end">
        <a class="btn btn-warning me-4" href="{{ path('app_back_album_edit', {'id': album.id}) }}">Modifier</a>
        {{ include('back/album/_delete_form.html.twig') }}
    </div>
</div>
    
{% endblock %}
